<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
    <title>My guitars</title>
</head>
<body>
    <% include ../partials/header %>
    <main>
        <div class="container">
            <h2>Guitars</h2>
            <div class="row">
                    <% guitars.forEach((guitar) => { %>
                        <div class="col-md-4">
                            <div class="card" style="width: 18rem;">
                                <img class="img-fluid" src="/img/guitars/<%= guitar.id%>.jpg"/>
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <a href="/guitars/<%= guitar.id %>">
                                            <%= guitar.name %>
                                        </a>    
                                    </h5>
                                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                                    <p><%= guitar.year %></p>
                                    <a href="#" class="btn btn-primary"><%= guitar.manufacturer %></a>
                                </div>
                            </div>
                        </div>
                    <% }) %>
            </div>    
        </div>    
    </main>
    <% include ../partials/footer %>    
</body>
</html>